<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width = "match_parent"
    android:layout_height = "match_parent"
    android:paddingLeft = "16dp"
    android:paddingRight = "16dp">

    <!--经度-->
    <TextView
        android:id = "@+id/Text_longitude"
        android:layout_width = "60dp"
        android:layout_height = "30dp"
        android:text = "@string/Text_longitude"
        android:textSize = "20sp"
        android:textColor = "#000000"
        android:layout_marginTop = "18dp" />

    <TextView
        android:id = "@+id/TV_longitude"
        android:layout_width = "280dp"
        android:layout_height = "30dp"
        android:text = "@string/TV_longitude"
        android:background = "@drawable/textview_border"
        android:textSize = "20sp"
        android:layout_marginTop = "18dp"
        android:layout_marginLeft = "45dp"/>

    <!--纬度-->
    <TextView
        android:id = "@+id/Text_latitude"
        android:layout_width = "60dp"
        android:layout_height ="30dp"
        android:text = "@string/Text_latitude"
        android:textSize = "20sp"
        android:textColor = "#000000"
        android:layout_marginTop = "66dp"/>

    <TextView
        android:id = "@+id/TV_latitude"
        android:layout_width = "280dp"
        android:layout_height = "30dp"
        android:text = "@string/TV_latitude"
        android:background = "@drawable/textview_border"
        android:textSize = "20sp"
        android:layout_marginLeft = "45dp"
        android:layout_marginTop = "66dp" />


    <!--备注-->
    <EditText
        android:id = "@+id/remark"
        android:layout_width = "340dp"
        android:layout_height = "40dp"
        android:hint = "@string/remark"
        android:layout_marginTop = "17dp"
        android:layout_below = "@+id/Text_latitude"
        android:layout_alignParentStart = "true" />


    <!--获取坐标-->
    <!--<Button
        android:id = "@+id/btn_get"
        android:layout_width = "100dp"
        android:layout_height = "40dp"
        android:text = "@string/btn_get"
        android:onClick = "getLocation"
        android:layout_marginTop = "155dp"/>-->

    <!--上传坐标-->

    <Button
        android:id = "@+id/btn_upload"
        android:layout_width = "100dp"
        android:layout_height = "40dp"
        android:text = "@string/btn_upload"
        android:onClick = "uploadLocation"
        android:layout_marginTop = "155dp"
        android:layout_marginLeft = "230dp"
        />

    <!--地点列表-->
    <ListView
        android:id = "@+id/location_listView"
        android:layout_width = "match_parent"
        android:layout_height = "280dp"
        android:layout_alignParentBottom = "true"
        android:layout_alignParentStart = "true" />

    <!--<TextView
        android:id = "@+id/Text_address"
        android:layout_width = "380dp"
        android:layout_height = "30dp"
        android:text = "@string/Text_address"
        android:textSize = "20sp"
        android:background = "@drawable/textview_border"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/TV_longitude"
        android:layout_alignParentEnd="true" />-->


</RelativeLayout>